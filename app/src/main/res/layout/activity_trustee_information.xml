<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trustee_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.umerejaz.testapp.Main.trustee_information"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_back"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sole Proprietor/Individual"
            android:padding="10dp"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="@color/white"/>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trustee Information "
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/et_trade_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:hint="  First Name"
        android:layout_marginBottom="10dp"
        android:background="@color/platinum"
        android:inputType="textCapWords"/>
    <EditText
        android:id="@+id/et_address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:hint="  Middle Name"
        android:background="@color/platinum"
        android:inputType="textPostalAddress"/>
    <EditText
        android:id="@+id/et_city"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:hint="  Last Name"
        android:background="@color/platinum"
        android:inputType="textCapWords"/>
    <Spinner
        android:id="@+id/spinner_suffix"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/platinum"
        ></Spinner>
    <EditText
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:hint="  Title"
        android:textSize="16sp"
        android:padding="10dp"
        android:background="@color/platinum"
        android:inputType="number"/>
    <Button
        android:id="@+id/next"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="16sp"
        android:layout_gravity="bottom|center"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
