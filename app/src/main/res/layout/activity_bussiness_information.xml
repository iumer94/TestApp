<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bussiness_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.umerejaz.testapp.SolePropreitorship.BussinessInformation"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_back"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sole Proprietor"
                android:padding="10dp"
                android:gravity="center"
                android:textSize="24sp"
                android:textColor="@color/white"/>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_info_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bussiness Information (No PO Boxes)"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/et_trade_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:hint="  Trade name/Doing Bussiness As"
        android:layout_marginBottom="10dp"
        android:background="@color/platinum"
        android:inputType="textCapWords"/>
    <EditText
        android:id="@+id/et_address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:hint="  Address"
        android:background="@color/platinum"
        android:inputType="textPostalAddress"/>
    <EditText
        android:id="@+id/et_city"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_marginBottom="10dp"
        android:layout_height="40dp"
        android:hint="  City"
        android:background="@color/platinum"
        android:inputType="textCapWords"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/state"
            android:layout_marginLeft="20dp"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:background="@color/platinum"
            ></Spinner>
        <EditText
            android:id="@+id/et_zipcode"
            android:layout_width="144dp"
            android:layout_height="40dp"
            android:hint="  Zip Code"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/platinum"
            android:inputType="number"
            android:maxLength="5"/>
    </LinearLayout>
    <EditText
        android:id="@+id/et_country"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:hint="  Country"
        android:background="@color/platinum"
        android:inputType="textCapWords"/>
    <EditText
        android:id="@+id/et_number"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="15dp"
        android:layout_width="322dp"
        android:layout_height="40dp"
        android:hint="  Phone Number"
        android:layout_marginBottom="10dp"
        android:background="@color/platinum"
        android:inputType="phone"
        android:maxLength="14"/>
    <CheckBox
        android:id="@+id/cb_mailing_Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Mailling Add. different then Bus. Add.?"
        android:textSize="16sp"
        android:textColor="@color/silver"/>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">
            <EditText
                android:id="@+id/et_mailaddress"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:hint="Mailing Address"
                android:background="@color/platinum"
                android:inputType="textPostalAddress"/>
            <EditText
                android:id="@+id/et_mailcity"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="322dp"
                android:layout_marginBottom="10dp"
                android:layout_height="40dp"
                android:hint="Mailing City"
                android:background="@color/platinum"
                android:inputType="textCapWords"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/mailingstate"
                    android:layout_marginLeft="20dp"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:background="@color/platinum"
                    ></Spinner>
                <EditText
                    android:id="@+id/et_mailing_zipcode"
                    android:layout_width="144dp"
                    android:layout_height="40dp"
                    android:hint="  Zip Code"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/platinum"
                    android:inputType="number"
                    android:maxLength="5"/>
            </LinearLayout>
            <EditText
                android:id="@+id/et_mailingcountry"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="15dp"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:hint="  Country"
                android:background="@color/platinum"
                android:inputType="textCapWords"/>
        </LinearLayout>

    <Button
        android:id="@+id/next"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textSize="16sp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>